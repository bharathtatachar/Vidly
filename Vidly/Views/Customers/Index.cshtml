@model IEnumerable<Vidly.Models.Customer>
    @{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customers</h2>
@{ 
        if(!Model.Any())
        {
            <p> Currently there are no customers.</p>
        }
        else
        {
            <table class="table table-bordered table-hover">
                 <thead>
                     <tr>
                         <th>Customer</th>
                         <th>Discount Rate</th>
                     </tr>
                 </thead>
                <tbody>
                    @foreach (var cust in Model)
                    {
                    @* var customerURL = "Customers/GetCustomer/" + customer.Id;*@
                    <tr>
                        <td>
                            @Html.ActionLink(cust.Name, "Details", "Customers", new { id = cust.Id }, null)
                        </td>
                        <td>@cust.MembershipType.MembershipTypeName</td>
                        @* <a href=@customerURL>*@

                        @*x</a>*@
                    </tr>
                    }
                </tbody>
                 </table>
        }
    }

