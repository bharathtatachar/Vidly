@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
     
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Genre</td>       
        </tr>
    </thead>
    <tbody>    
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var mtable = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }]
            });          
        });
    </script>
}



